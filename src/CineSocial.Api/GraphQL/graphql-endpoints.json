{
  "baseUrl": "https://localhost:7221/graphql",
  "mutations": {
    "auth": {
      "register": {
        "description": "Register a new user account",
        "variables": {
          "username": "string",
          "email": "string",
          "password": "string"
        },
        "requiresAuth": false,
        "exampleData": {
          "username": "testuser",
          "email": "testuser@example.com",
          "password": "Test123!@#"
        }
      },
      "login": {
        "description": "Login with existing credentials",
        "variables": {
          "email": "string",
          "password": "string"
        },
        "requiresAuth": false,
        "exampleData": {
          "email": "testuser@example.com",
          "password": "Test123!@#"
        }
      }
    },
    "user": {
      "updateProfile": {
        "description": "Update user profile information",
        "variables": {
          "username": "string?",
          "bio": "string?",
          "profileImageId": "int?",
          "backgroundImageId": "int?"
        },
        "requiresAuth": true,
        "exampleData": {
          "username": "updateduser",
          "bio": "Film enthusiast and cinephile"
        }
      }
    },
    "follow": {
      "followUser": {
        "description": "Follow another user",
        "variables": {
          "followingId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "followingId": 2
        }
      },
      "unfollowUser": {
        "description": "Unfollow a user",
        "variables": {
          "followingId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "followingId": 2
        }
      }
    },
    "block": {
      "blockUser": {
        "description": "Block a user",
        "variables": {
          "blockedUserId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "blockedUserId": 3
        }
      },
      "unblockUser": {
        "description": "Unblock a user",
        "variables": {
          "blockedUserId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "blockedUserId": 3
        }
      }
    },
    "comment": {
      "createComment": {
        "description": "Create a comment on a movie or other commentable item",
        "variables": {
          "commentableType": "MOVIE | MOVIE_LIST | USER",
          "commentableId": "int",
          "content": "string"
        },
        "requiresAuth": true,
        "exampleData": {
          "commentableType": "MOVIE",
          "commentableId": 1,
          "content": "Amazing cinematography! One of the best films I've seen this year."
        }
      },
      "replyToComment": {
        "description": "Reply to an existing comment",
        "variables": {
          "parentCommentId": "int",
          "content": "string"
        },
        "requiresAuth": true,
        "exampleData": {
          "parentCommentId": 1,
          "content": "I totally agree! The directing was superb as well."
        }
      },
      "updateComment": {
        "description": "Update an existing comment",
        "variables": {
          "commentId": "int",
          "content": "string"
        },
        "requiresAuth": true,
        "exampleData": {
          "commentId": 1,
          "content": "Updated: Amazing cinematography and incredible soundtrack!"
        }
      },
      "deleteComment": {
        "description": "Delete a comment",
        "variables": {
          "commentId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "commentId": 1
        }
      }
    },
    "rate": {
      "rateMovie": {
        "description": "Rate a movie (0.5 to 5.0 stars)",
        "variables": {
          "movieId": "int",
          "rating": "decimal (0.5-5.0)"
        },
        "requiresAuth": true,
        "exampleData": {
          "movieId": 1,
          "rating": 4.5
        }
      },
      "removeRate": {
        "description": "Remove your rating from a movie",
        "variables": {
          "movieId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "movieId": 1
        }
      }
    },
    "reaction": {
      "addReaction": {
        "description": "Add a reaction to a comment (like/love/laugh/etc)",
        "variables": {
          "commentId": "int",
          "type": "ReactionType enum"
        },
        "requiresAuth": true,
        "exampleData": {
          "commentId": 1,
          "type": "LIKE"
        }
      },
      "removeReaction": {
        "description": "Remove your reaction from a comment",
        "variables": {
          "commentId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "commentId": 1
        }
      }
    },
    "movieList": {
      "createMovieList": {
        "description": "Create a new movie list",
        "variables": {
          "name": "string",
          "description": "string?",
          "isPublic": "bool",
          "coverImageId": "int?"
        },
        "requiresAuth": true,
        "exampleData": {
          "name": "My Top 10 Sci-Fi Films",
          "description": "A curated list of the best science fiction movies",
          "isPublic": true
        }
      },
      "updateMovieList": {
        "description": "Update an existing movie list",
        "variables": {
          "id": "int",
          "name": "string?",
          "description": "string?",
          "isPublic": "bool?",
          "coverImageId": "int?"
        },
        "requiresAuth": true,
        "exampleData": {
          "id": 1,
          "name": "Updated List Name",
          "description": "Updated description"
        }
      },
      "deleteMovieList": {
        "description": "Delete a movie list",
        "variables": {
          "id": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "id": 1
        }
      },
      "addMovieToList": {
        "description": "Add a movie to a list",
        "variables": {
          "listId": "int",
          "movieId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "listId": 1,
          "movieId": 5
        }
      },
      "removeMovieFromList": {
        "description": "Remove a movie from a list",
        "variables": {
          "listId": "int",
          "movieId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "listId": 1,
          "movieId": 5
        }
      },
      "reorderMovieInList": {
        "description": "Change the order of a movie in a list",
        "variables": {
          "listId": "int",
          "movieId": "int",
          "newOrder": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "listId": 1,
          "movieId": 5,
          "newOrder": 3
        }
      },
      "favoriteMovieList": {
        "description": "Add a list to favorites",
        "variables": {
          "listId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "listId": 1
        }
      },
      "unfavoriteMovieList": {
        "description": "Remove a list from favorites",
        "variables": {
          "listId": "int"
        },
        "requiresAuth": true,
        "exampleData": {
          "listId": 1
        }
      }
    }
  },
  "queries": {
    "movie": {
      "getMovies": {
        "description": "Get list of movies with optional filtering and search",
        "variables": {
          "searchTerm": "string?"
        },
        "requiresAuth": false,
        "exampleData": {
          "searchTerm": "Inception"
        }
      },
      "getMovieById": {
        "description": "Get a specific movie by ID",
        "variables": {
          "id": "int"
        },
        "requiresAuth": false,
        "exampleData": {
          "id": 1
        }
      }
    },
    "user": {
      "getCurrentUser": {
        "description": "Get current authenticated user information",
        "variables": {},
        "requiresAuth": true,
        "exampleData": {}
      },
      "users": {
        "description": "Get all users",
        "variables": {},
        "requiresAuth": true,
        "exampleData": {}
      }
    }
  }
}
